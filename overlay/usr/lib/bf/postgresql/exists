#!/usr/bin/with-contenv sh

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Check arguments.
#   1   Database name
#======================================================================================================================

[[ -z "${1-}" ]] && bf-error "You must provide the name of the database to check."


#======================================================================================================================
# Query psql to see if database exists.
#======================================================================================================================

psql -l | grep -w "${1}" | wc -l
